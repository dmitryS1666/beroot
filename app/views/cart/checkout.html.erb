<main class="main__content_wrapper">
  <!-- Start breadcrumb section -->
  <section class="breadcrumb__section breadcrumb__bg">
    <div class="container">
      <div class="row row-cols-1">
        <div class="col">
          <div class="breadcrumb__content text-center">
            <ul class="breadcrumb__content--menu d-flex justify-content-center">
              <li class="breadcrumb__content--menu__items"><a href="<%= root_path %>">Главная</a></li>
              <li class="breadcrumb__content--menu__items"><span>Оформление заказа</span></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End breadcrumb section -->

  <!-- Start checkout page area -->
  <%= form_with scope: :order, url: orders_sent_path, method: :post, local: true, class: "contact__form--inner" do |form| %>
    <div class="checkout__page--area section--padding">
      <div class="container">
        <div class="row">
          <div class="col-lg-7 col-md-6">
            <div class="main checkout__mian">
              <div class="checkout__content--step section__contact--information">
                <div class="section__header checkout__section--header d-flex align-items-center justify-content-between mb-25">
                  <h2 class="section__header--title h3">Контактная информация</h2>
                </div>
                <div class="customer__information">
                  <div class="checkout__email--phone mb-12">
                    <label>
                      <input class="checkout__input--field border-radius-5" name="phone_number" id="phone_number" placeholder="Номер телефона" type="text" required="true">
                    </label>
                  </div>
                </div>
              </div>
              <div class="checkout__content--step section__shipping--address">
                <div class="section__header mb-25">
                  <h2 class="section__header--title h3">Информация по доставке</h2>
                </div>
                <div class="section__shipping--address__content">
                  <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 mb-20">
                      <div class="checkout__input--list ">
                        <label class="checkout__input--label mb-5" for="name">
                          Имя <span class="checkout__input--label__star">*</span>
                        </label>
                        <input class="checkout__input--field border-radius-5" placeholder="Имя" name="name" id="name" type="text" required="true">
                      </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 mb-20">
                      <div class="checkout__input--list">
                        <label class="checkout__input--label mb-5" for="last_name">
                          Фамилия <span class="checkout__input--label__star">*</span>
                        </label>
                        <input class="checkout__input--field border-radius-5" placeholder="Фамилия" name="last_name" id="last_name" type="text" required="true">
                      </div>
                    </div>
                    <div class="col-12 mb-20">
                      <div class="checkout__input--list">
                        <label class="checkout__input--label mb-5" for="address">
                          Адрес <span class="checkout__input--label__star">*</span>
                        </label>
                        <input class="checkout__input--field border-radius-5" placeholder="Адрес" name="address" id="address" type="text" required="true">
                      </div>
                    </div>
                    <div class="col-12 mb-20">
                      <div class="checkout__input--list">
                        <label class="checkout__input--label mb-5" for="city">
                          Город/Населенный пункт <span class="checkout__input--label__star">*</span>
                        </label>
                        <input class="checkout__input--field border-radius-5" placeholder="г. Москва" name="city" id="city" type="text" required="true">
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="order-notes mb-20">
                <label class="checkout__input--label mb-5" for="message">Сообщение к заказу
                  <span class="checkout__input--label__star">*</span>
                </label>
                <textarea class="checkout__notes--textarea__field border-radius-5" name="message" id="message" placeholder="Ваше примечание к заказу" spellcheck="false" required="true"></textarea>
              </div>

              <div class="checkout__content--step__footer d-flex align-items-center">
                <a class="continue__shipping--btn primary__btn border-radius-5" href="<%= root_path %>">
                  Продолжить покупки
                </a>
                <a class="previous__link--content" href="/cart">Вернуться к корзине</a>
              </div>
            </div>
          </div>
          <div class="col-lg-5 col-md-6">
            <aside class="checkout__sidebar sidebar border-radius-10">
              <h2 class="checkout__order--summary__title text-center mb-15">Описание вашего заказа</h2>
              <div class="cart__table checkout__product--table">
                <table class="cart__table--inner">
                  <tbody class="cart__table--body">
                  <%= form.hidden_field :cart_id, value: @cart.id %>

                  <% @cart.orderables.order(created_at: :desc).each do |orderable| %>
                    <% product = orderable.product %>
                    <tr class="cart__table--body__items">
                      <td class="cart__table--body__list">
                        <div class="product__image two  d-flex align-items-center">
                          <div class="product__thumbnail border-radius-5">
                            <a class="display-block" href="<%= product_path(product) %>">
                              <img class="display-block border-radius-5" src="/assets/product/small-product/product9.webp" alt="cart-product">
                            </a>
                            <span class="product__thumbnail--quantity"><%= orderable.quantity %></span>
                          </div>
                          <div class="product__description">
                            <h4 class="product__description--name">
                              <a href="<%= product_path(product) %>"><%= product.name %></a>
                            </h4>
                            <span class="product__description--variant">ПОСТАВЩИК: <%= product.provider %></span>
                          </div>
                        </div>
                      </td>
                      <td class="cart__table--body__list">
                        <span class="cart__price">&#x20BD;<%= orderable.quantity.to_f * product.price.to_f %></span>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
              <div class="checkout__total">
                <table class="checkout__total--table">
                  <tr class="checkout__total--footer__items">
                    <td class="checkout__total--footer__title checkout__total--footer__list text-left">Итого</td>
                    <td class="checkout__total--footer__amount checkout__total--footer__list text-right">
                      &#x20BD; <%= @cart.total %>
                    </td>
                  </tr>
                </table>
              </div>
              <br>
              <%= form.submit "Оформить", class: "checkout__now--btn primary__btn" %>
            </aside>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <!-- End checkout page area -->
</main>
<div class="container-custom">
  <div class="grid second-nav">
        <div class="column-xs-12">
          <nav>
            <ol class="breadcrumb-list">
              <%# <li class="breadcrumb-item"><a href="/">Home</a></li> %>
              <li class="breadcrumb-item" ><a href="/">Collections</a></li>
              <li class="breadcrumb-item active"><%= @category.name %></li>
            </ol>
          </nav>
        </div>
      </div>
      <br>
    <div class='container'>
      <div class="container index-cards-container">
        <%@category.products.each do |product| %>
        <div class="card-index">
        <% count = 0 %>
        <% product.photos.each do |photo| %>
        <%= link_to product_path(product) do %>
        <%= image_tag photo, class: "card-index-image"%>
        <% end %>
        <% count += 1 %>
        <% break if count == 1 %>
        <% end %>
              <div class="card-index-infos">
            <div>
              <%= link_to product_path(product), class:"text-decoration-none" do %>
              <h2><%=product.name%></h2>
              <p><%= truncate(product.description, length: 40, separator: ' ', omission: '...') %></p>
              <a href="https://www.instagram.com/joanabossajewelry/"><i class="fab fa-instagram"></i></a>
              <% end %>
            </div>
              <h2 class="card-index-pricing">â‚¬<%= product.price.round(0) %></h2>
              <%= image_tag "agro_logo.jpg", alt: "alttext", class: "card-index-user avatar-bordered"%>
          </div>
        </div>
        <%end%>
      </div>

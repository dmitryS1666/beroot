<main class="main__content_wrapper">

  <!-- Start breadcrumb section -->
<%#= render 'shared/breadcrumb', category: @category, category_name: @category.name  %>
  <!-- End breadcrumb section -->

  <!-- Start shop section -->
  <div class="shop__section section--padding">
    <div class="container">
      <div class="row">
        <div class="col-xl-3 col-lg-4 shop-col-width-lg-4">
          <div class="shop__sidebar--widget widget__area d-none d-lg-block">
            <%#= render 'shared/category/category_filter', { category: @category } %>

            <%= render 'shared/category/details_filter' %>

            <%= render 'shared/category/price_filter' %>

            <%= render 'shared/category/brand_filter' %>

            <%= render 'shared/top_rated_product' %>
          </div>
        </div>
        <div class="col-xl-9 col-lg-8 shop-col-width-lg-8">
          <div class="shop__right--sidebar">
            <!-- Start categories section -->
            <div class="categories__shop mb-50">
              <div class="section__heading border-bottom mb-30">
                <h2 class="section__heading--maintitle">Все товары <span>раздела</span></h2>
              </div>
            </div>
            <!-- End categories section -->
            <div class="shop__product--wrapper">
              <div class="tab_content">
                <div id="product_grid" class="tab_pane active show">
                  <div class="product__section--inner">
                    <div class="row mb--n30">
                      <% @search_results.each do |product| %>
                        <div class="col-lg-4 col-md-4 col-sm-6 col-6 custom-col mb-30">
                          <article class="product__card">
                            <div class="product__card--thumbnail">
                              <%= link_to product_path(product), class: "product__card--thumbnail__link display-block" do %>
                                <img class="product__card--thumbnail__img product__primary--img" src="/assets/product/main-product/product5.webp" alt="product-img">
                                <img class="product__card--thumbnail__img product__secondary--img" src="/assets/product/main-product/product6.webp" alt="product-img">
                              <% end %>
                              <% if product.sale > 0 %>
                                <span class="product__badge"><%= product.sale %></span>
                              <% end %>
                            </div>
                            <div class="product__card--content">
                              <h3 class="product__card--title">
                                <a href="product-details.html"><%= product.name %></a></h3>
                              <div class="product__card--price">
                                <span class="current__price">&#x20BD;<%= product.price %></span>
                                <span class="old__price">&#x20BD;<%= product.price %></span>
                              </div>
                              <!-- Добавить в корзину -->
                              <div class="product__card--footer">
                                <a class="product__card--btn primary__btn" href="cart.html">
                                  <svg width="14" height="11" viewBox="0 0 14 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M13.2371 4H11.5261L8.5027 0.460938C8.29176 0.226562 7.9402 0.203125 7.70582 0.390625C7.47145 0.601562 7.44801 0.953125 7.63551 1.1875L10.0496 4H3.46364L5.8777 1.1875C6.0652 0.953125 6.04176 0.601562 5.80739 0.390625C5.57301 0.203125 5.22145 0.226562 5.01051 0.460938L1.98707 4H0.299574C0.135511 4 0.0183239 4.14062 0.0183239 4.28125V4.84375C0.0183239 5.00781 0.135511 5.125 0.299574 5.125H0.721449L1.3777 9.78906C1.44801 10.3516 1.91676 10.75 2.47926 10.75H11.0339C11.5964 10.75 12.0652 10.3516 12.1355 9.78906L12.7918 5.125H13.2371C13.3777 5.125 13.5183 5.00781 13.5183 4.84375V4.28125C13.5183 4.14062 13.3777 4 13.2371 4ZM11.0339 9.625H2.47926L1.86989 5.125H11.6433L11.0339 9.625ZM7.33082 6.4375C7.33082 6.13281 7.07301 5.875 6.76832 5.875C6.4402 5.875 6.20582 6.13281 6.20582 6.4375V8.3125C6.20582 8.64062 6.4402 8.875 6.76832 8.875C7.07301 8.875 7.33082 8.64062 7.33082 8.3125V6.4375ZM9.95582 6.4375C9.95582 6.13281 9.69801 5.875 9.39332 5.875C9.0652 5.875 8.83082 6.13281 8.83082 6.4375V8.3125C8.83082 8.64062 9.0652 8.875 9.39332 8.875C9.69801 8.875 9.95582 8.64062 9.95582 8.3125V6.4375ZM4.70582 6.4375C4.70582 6.13281 4.44801 5.875 4.14332 5.875C3.8152 5.875 3.58082 6.13281 3.58082 6.4375V8.3125C3.58082 8.64062 3.8152 8.875 4.14332 8.875C4.44801 8.875 4.70582 8.64062 4.70582 8.3125V6.4375Z" fill="currentColor"/>
                                  </svg>
                                  Добавить в корзину
                                </a>
                              </div>
                              <!-- Добавить в корзину -->
                            </div>
                          </article>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="pagination__area">
                <nav class="pagination justify-content-center">
                  <ul class="pagination__wrapper d-flex align-items-center justify-content-center">
                    <%#= will_paginate @search_results, previous_label: t("will_paginate.previous_label"), next_label: t("will_paginate.next_label") %>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End shop section -->

  <!-- Start shipping section -->
  <%= render 'shared/shipping' %>
  <!-- End shipping section -->

</main>

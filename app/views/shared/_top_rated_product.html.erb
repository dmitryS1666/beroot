<div class="single__widget widget__bg">
  <h2 class="widget__title h3">Популярные продукты</h2>
  <div class="shop__sidebar--product">
    <% @top_rated_products.each do |product| %>
      <div class="small__product--card d-flex">
        <div class="small__product--thumbnail">
          <a class="display-block" href="product-details.html">
            <img src="/assets/product/small-product/product6.webp" alt="product-img">
          </a>
        </div>
        <div class="small__product--content">
          <h3 class="small__product--card__title">
            <a href="<%= product_path(product) %>"><%= product.name %></a>
          </h3>
          <div class="small__product--card__price">
            <span class="current__price">&#x20BD;<%= product.price %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
